<% include header %>
<ol class="breadcrumb">
    <li class="text-info">账号管理</li>
    <li class="active">添加账号</li>
</ol>

<div class="row formAdd">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h3><div class="text-center">添加账号</div></h3>
        <form action="/admin/adminInsert" method="post">
            <!-- <div class="input-group">
              <span class="input-group-addon"> 序号：ID</span>
              <input type="text" class="form-control" name="ID">
            </div> -->
            <div class="input-group">
              <span class="input-group-addon">新建账号</span>
              <input type="text" class="form-control" name="name">
            </div>

            <div class="input-group">
              <span class="input-group-addon">新建密码</span>
              <input type="password" class="form-control" name="password">
            </div>   
 
            <div class="input-group">
              <span class="input-group-addon">确认密码</span>
              <input type="password" class="form-control" name="repassword">
            </div>  
            <div class="input-group">
              <span class="input-group-addon">验证码：</span>
              <input type="text" class="form-control" name="code" style="height:50px;">
              <div class="input-group-addon">
                <a href=""><img src="/admin/code" alt=""></a>
              </div>
            </div>


            <div class="center-block ctr text-center">
              <input type="submit" class="btn btn-success" value="确认添加">
            </div>
            <input type="hidden" name="state" value="可用">
        </form>     
    </div>
    <div class="col-md-3"></div>
</div>

<% include footer %>
