<% include header %>
<ol class="breadcrumb">
    <li class="text-info">分类管理</li>
    <li class="active">添加分类</li>
</ol>

<div class="row formAdd">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h3><div class="text-center">添加分类</div></h3>
        <form action="/admin/worksInsert" method="post">
            <div class="input-group">
              <span class="input-group-addon">分类序号</span>
              <input type="text" class="form-control" name="order">
            </div>
            <div class="input-group">
              <span class="input-group-addon">分类名称</span>
              <input type="text" class="form-control" name="name">
            </div>
            <div class="input-group">
              <span class="input-group-addon">分类关键词</span>
              <input type="text" class="form-control" name="classify">
            </div>
            <div class="input-group">
              <span class="input-group-addon">分类简介</span>
              <!-- <input type="text" class="form-control" name="synopsis"> -->
              <textarea name="synopsis" class="form-control side textwbit"></textarea>
            </div>   
            
            <div class="center-block text-center ctr">
              <input type="submit" class="btn btn-success text-center" value="确定添加">
            </div>

        </form>     
    </div>
    <div class="col-md-3"></div>
</div>
<% include footer %>