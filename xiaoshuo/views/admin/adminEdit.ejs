<% include header %>
<ol class="breadcrumb">
    <li class="text-info">账号管理</li>
    <li class="active">账号编辑</li>
</ol>

<div class="row formAdd">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h3><div class="text-center">修改信息</div></h3>
        <form action="/admin/adminUpdate" method="post">
            <input type="hidden" name="_id" value="<%=data._id%>">
            <div class="input-group">
              <span class="input-group-addon">修改账号名称</span>
              <input type="text" class="form-control" name="name"  value="<%=data.name%>">
            </div>
            <div class="input-group">
              <span class="input-group-addon">修改账号状态</span>
              <!-- <input type="text" class="form-control" name="state"  value="<%=data.state%>"> -->
                <select class="form-control" name="state">
                    <option value="可用">可用</option>
                    <option value="禁用">禁用</option>
                </select>
              </div>
            </div>
            
            <div class="center-block mading">
              <input type="submit" class="btn btn-success" value="确认修改">
            </div>

        </form>     
    </div>
    <div class="col-md-3"></div>
</div>

<% include footer %>
