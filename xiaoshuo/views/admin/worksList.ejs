<% include header %>
<ol class="breadcrumb">
    <li class="text-info">分类管理</li>
    <li class="active">分类列表</li>
</ol>

<div class="row">
    <div class="col-md-12">
        <table class="table table-hover datalist">
            <caption><h3>分类列表</h3></caption>
            <thead>
                <tr>
                    <td>分类序号</td>
                    <td>分类名称</td>
                    <td>分类关键词</td>
                    <td>分类简介</td>
                    <td>创建时间</td>
                    <td>操作</td>
                </tr>
            </thead>
            <% works.forEach(function(val){ %>
                <tr>
                    <td><%=val.order%></td>
                    <td><%=val.name%></td>
                    <td><%=val.classify%></td>
                    <td><%=val.synopsis%></td>
                    <td><%= val.ctime.toLocaleString()%> </td>
                    <td>
                        <a href="/admin/worksEdit/<%=val._id%>">编辑</a>
                        |
                        <a href="/admin/worksRemove/<%=val._id%>" onclick="return confirm('你确定要删除吗？')">删除</a>
                    </td>
                </tr>
            <% }) %>
        </table>
    </div>
</div>
<% include footer %>