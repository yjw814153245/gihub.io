<% include header %>
<ol class="breadcrumb">
  <li class="text-info">小说管理</li>
  <li class="active">小说章节</li>
</ol>

<form action="/admin/chapterInsert" method="post" enctype="multipart/form-data">
  <div class="row chapterAdd">
    <div class="col-md-6">
      <div class="input-group">
        <span class="input-group-addon">小说名</span>
        <input type="text" class="form-control" name="title">
      </div>      
    </div>
    <div class="col-md-6">
      <div class="input-group">
        <span class="input-group-addon">小说分类</span>
        <select class="form-control" name="itemId">
          <% works.forEach(function(val){ %> 
            <option value="<%=val._id%>"><%=val.name%></option>
          <% }) %>
        </select>
      </div>      
    </div>
    <div class="col-md-6">
      <div class="input-group">
        <span class="input-group-addon">小说封面</span>
        <input type="file" class="form-control" name="imgurl">
      </div>      
    </div>

    <div class="col-md-6">
      <div class="input-group">
        <span class="input-group-addon">章节名</span>
        <input type="text" class="form-control" name="keywords">
      </div>      
    </div>
    <br><br><br><br>
    <div class="col-md-12">
      <!-- 加载编辑器的容器 -->
      <script id="content" name="content" type="text/plain"></script>
    </div>  

    <div class="col-md-12 mybtn text-center">
      <input type="reset" class="btn btn-info btn-o" value="重置">
    <!-- </div>

    <div class="col-md-6 mybtn"> -->
      <input type="submit" class="btn btn-success btn-o" value="发布">
    </div>
  </div>
</form>

<!-- 配置文件 -->
<script type="text/javascript" src="/ueditor/ueditor.config.js"></script>
<!-- 编辑器源码文件 -->
<script type="text/javascript" src="/ueditor/ueditor.all.min.js"></script>
<!-- 实例化编辑器 -->
<script type="text/javascript">
    var ue = UE.getEditor('content');
</script>
<% include footer %>
