<% include header %>
<ol class="breadcrumb">
    <li class="text-info">作品管理</li>
    <li class="active">作品列表</li>
</ol>

<div class="row formAdd">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h3>修改小说信息</h3>
        <form action="/admin/worksUpdate" method="post">
            <input type="hidden" name="_id" value="<%=data._id%>">
            <div class="input-group">
              <span class="input-group-addon">修改序号</span>
              <input type="text" class="form-control" name="order"  value="<%=data.order%>">
            </div>
            <div class="input-group">
              <span class="input-group-addon">修改分类名称</span>
              <input type="text" class="form-control" name="name"  value="<%=data.name%>">
            </div>
            <div class="input-group">
              <span class="input-group-addon">修改分类关键词</span>
              <input type="text" class="form-control" name="classify"  value="<%=data.classify%>">
            </div>
            <div class="input-group">
              <span class="input-group-addon">修改分类简介</span>
              <input type="text" class="form-control" name="synopsis" value="<%=data.synopsis%>">
            </div>   
            
            <div class="center-block text-center ctr">
              <input type="submit" class="btn btn-success" value="确认修改">
            </div>

        </form>     
    </div>
    <div class="col-md-3"></div>
</div>

<% include footer %>
